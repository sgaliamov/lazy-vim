source ~/.vimrc

" nvim and vscode have it by default, but visual studio does not
set hlsearch
set incsearch

" set ignorecase

" use standard options for vs
" set number
" set relativenumber

" ============ RESHARPER ==============

" Ctrl-r-r
" noremap <leader>r :vsc ReSharper.ReSharper_Rename<CR>

" Ctrl-e-f
" noremap <leader>f :vsc ReSharper.ReSharper_SilentCleanupCode<CR>

" Shift-Alt-F12
" noremap gF :vsc ReSharper.ReSharper_FindUsages<CR>

" Ctrl-Alt-Right
" noremap <leader>w :vsc ReSharper.ReSharper_ExtendSelection<CR>

" =========== VISUAL STUDIO ===========

" inoremap <C-o> <Esc>:vsc File.OpenFile<CR>
" inoremap <C-f> <Esc>:vsc Edit.Find<CR>

" show definition in popup window
" noremap gD :vsc Edit.PeekDefinition<CR>

" go to implementation (Ctrl-F12)
" noremap gf :vsc Edit.GoToDeclaration<CR>

" " Copy selected text in the visual mode
" vnoremap <C-c> y

" " Copy a line in the normal mode
" nnoremap <C-c> yy

" " Close window
" nnoremap <C-w><C-q> :clo<CR>

" nnoremap <leader>zl :so ~/.vsvimrc<CR>
" nnoremap <leader>zk :vsc Tools.CustomizeKeyboard<CR>

" move line
" nnoremap <A-j> :m .+1<CR>==
" nnoremap <A-k> :m .-2<CR>==
" inoremap <A-j> <Esc>:m .+1<CR>==gi
" inoremap <A-k> <Esc>:m .-2<CR>==gi
" vnoremap <A-j> :vsc Edit.MoveSelectedLinesDown<CR>
" vnoremap <A-k> :vsc Edit.MoveSelectedLinesUp<CR>

" SURROUNDING

" " surrounding workaround
" noremap s <NOP>
" noremap sd <NOP>

" " surround inner word
" nnoremap s" ciw"<C-r>""<Esc>
" nnoremap s' ciw'<C-r>"'<Esc>
" nnoremap s, ciw<<C-r>"><Esc>
" nnoremap s9 ciw(<C-r>")<Esc>
" nnoremap s[ ciw[<C-r>"]<Esc>
" nnoremap s{ ciw{<C-r>"}<Esc>

" " surround visual selected text
" vnoremap s" c"<C-r>""<Esc>
" vnoremap s' c"<C-r>"'<Esc>
" vnoremap s, c<<C-r>"><Esc>
" vnoremap s9 c(<C-r>")<Esc>
" vnoremap s[ c[<C-r>"]<Esc>
" vnoremap s{ c{<C-r>"}<Esc>

" " delete surround
" nnoremap sd" di"h"_2s<C-r>"<Esc>
" nnoremap sd' di'h"_2s<C-r>"<Esc>
" nnoremap sd, di<h"_2s<C-r>"<Esc>
" nnoremap sd9 di(h"_2s<C-r>"<Esc>
" nnoremap sd[ di[h"_2s<C-r>"<Esc>
" nnoremap sd{ di{h"_2s<C-r>"<Esc>

" " change surround
" nnoremap '" di'h"_2s"<C-r>""<Esc>
" nnoremap "' di"h"_2s'<C-r>"'<Esc>

